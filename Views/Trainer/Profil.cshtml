@model FitnessSalonYonetim.Models.Antrenor
@{
    ViewData["Title"] = "Profilim";
    var user = ViewBag.User as FitnessSalonYonetim.Models.ApplicationUser;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-person-circle"></i> Profilim</h1>
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Dashboard'a Dön
        </a>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-person"></i> Kişisel Bilgiler</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        @if (!string.IsNullOrEmpty(Model.ProfilResmi))
                        {
                            <img src="@Model.ProfilResmi" alt="@Model.AdSoyad" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="rounded-circle bg-primary d-inline-flex align-items-center justify-content-center text-white mb-3" style="width: 150px; height: 150px; font-size: 5rem;">
                                <i class="bi bi-person"></i>
                            </div>
                        }
                    </div>
                    <h4 class="text-center mb-3">@Model.AdSoyad</h4>
                    
                    <table class="table table-borderless">
                        <tr>
                            <td><strong>Email:</strong></td>
                            <td><a href="mailto:@Model.Email">@Model.Email</a></td>
                        </tr>
                        <tr>
                            <td><strong>Telefon:</strong></td>
                            <td><a href="tel:@Model.Telefon">@Model.Telefon</a></td>
                        </tr>
                        <tr>
                            <td><strong>Salon:</strong></td>
                            <td>
                                @if (Model.Salon != null)
                                {
                                    <span class="badge bg-info">@Model.Salon.Ad</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Durum:</strong></td>
                            <td>
                                @if (Model.Aktif)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Pasif</span>
                                }
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-star"></i> Uzmanlık Alanları</h5>
                </div>
                <div class="card-body">
                    <p class="lead">@Model.UzmanlikAlanlari</p>
                    
                    @if (!string.IsNullOrEmpty(Model.Biyografi))
                    {
                        <hr />
                        <h6><strong>Biyografi:</strong></h6>
                        <p>@Model.Biyografi</p>
                    }
                </div>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-gear"></i> Verdiğim Hizmetler</h5>
                </div>
                <div class="card-body">
                    @if (Model.AntrenorHizmetler != null && Model.AntrenorHizmetler.Any())
                    {
                        <div class="row">
                            @foreach (var ah in Model.AntrenorHizmetler)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="card h-100 border-info">
                                        <div class="card-body">
                                            <h6 class="card-title">
                                                <i class="bi bi-check-circle-fill text-success"></i>
                                                @ah.Hizmet.Ad
                                            </h6>
                                            <p class="card-text">
                                                <small class="text-muted">@ah.Hizmet.Aciklama</small>
                                            </p>
                                            <div class="d-flex justify-content-between">
                                                <span class="badge bg-secondary">@ah.Hizmet.Sure dakika</span>
                                                <span class="badge bg-success">@ah.Hizmet.Ucret ₺</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-3">Henüz hizmet atanmamış.</p>
                    }
                </div>
            </div>

            <div class="card shadow">
                <div class="card-header bg-warning">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Hesap Bilgileri</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <td><strong>Kullanıcı Adı:</strong></td>
                            <td>@user.UserName</td>
                        </tr>
                        <tr>
                            <td><strong>Hesap Email:</strong></td>
                            <td>@user.Email</td>
                        </tr>
                        <tr>
                            <td><strong>Kayıt Tarihi:</strong></td>
                            <td>@user.KayitTarihi.ToString("dd MMMM yyyy")</td>
                        </tr>
                    </table>
                    <div class="alert alert-info mb-0">
                        <i class="bi bi-info-circle"></i>
                        <strong>Not:</strong> Profil bilgilerinizi güncellemek için lütfen yönetici ile iletişime geçin.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

