@{
    ViewData["Title"] = "Üyelerim";
    var antrenor = ViewBag.Antrenor as FitnessSalonYonetim.Models.Antrenor;
    var uyeler = ViewBag.Uyeler as List<dynamic>;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-people"></i> Üyelerim</h1>
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Dashboard'a Dön
        </a>
    </div>

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Benden Randevu Alan Üyeler (@(uyeler?.Count ?? 0))</h5>
        </div>
        <div class="card-body">
            @if (uyeler != null && uyeler.Any())
            {
                <div class="row">
                    @foreach (var item in uyeler)
                    {
                        var uye = item.Uye as FitnessSalonYonetim.Models.ApplicationUser;
                        var toplamRandevu = (int)item.ToplamRandevu;
                        var sonRandevu = (DateTime)item.SonRandevu;
                        var tamamlananRandevu = (int)item.TamamlananRandevu;

                        <div class="col-md-6 mb-4">
                            <div class="card h-100 border-primary">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-3 text-center">
                                            <div class="rounded-circle bg-primary d-inline-flex align-items-center justify-content-center text-white" style="width: 80px; height: 80px; font-size: 2rem;">
                                                <i class="bi bi-person"></i>
                                            </div>
                                        </div>
                                        <div class="col-md-9">
                                            <h5>@uye.AdSoyad</h5>
                                            <p class="text-muted mb-2">
                                                <i class="bi bi-envelope"></i> @uye.Email
                                                @if (!string.IsNullOrEmpty(uye.PhoneNumber))
                                                {
                                                    <br />
                                                    <i class="bi bi-telephone"></i> @uye.PhoneNumber
                                                }
                                            </p>

                                            <div class="row">
                                                <div class="col-6">
                                                    <div class="card bg-info text-white">
                                                        <div class="card-body text-center py-2">
                                                            <h4 class="mb-0">@toplamRandevu</h4>
                                                            <small>Toplam Randevu</small>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-6">
                                                    <div class="card bg-success text-white">
                                                        <div class="card-body text-center py-2">
                                                            <h4 class="mb-0">@tamamlananRandevu</h4>
                                                            <small>Tamamlanan</small>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="mt-2">
                                                <small class="text-muted">
                                                    <i class="bi bi-calendar"></i> Son Randevu: @sonRandevu.ToString("dd MMMM yyyy")
                                                </small>
                                            </div>

                                            @if (uye.DogumTarihi.HasValue)
                                            {
                                                var yas = DateTime.Now.Year - uye.DogumTarihi.Value.Year;
                                                <div class="mt-1">
                                                    <small class="text-muted">
                                                        <i class="bi bi-person-vcard"></i> Yaş: @yas
                                                    </small>
                                                </div>
                                            }

                                            @if (uye.Boy.HasValue && uye.Kilo.HasValue)
                                            {
                                                var boyM = uye.Boy.Value / 100.0;
                                                var bmi = (double)uye.Kilo.Value / (boyM * boyM);
                                                <div class="mt-1">
                                                    <small class="text-muted">
                                                        <i class="bi bi-activity"></i> @uye.Boy cm / @uye.Kilo kg (BMI: @bmi.ToString("F1"))
                                                    </small>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Genel İstatistikler -->
                <div class="row mt-4">
                    <div class="col-md-12">
                        <h6><i class="bi bi-bar-chart"></i> Genel İstatistikler</h6>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-primary text-white">
                            <div class="card-body text-center">
                                <h3>@uyeler.Count</h3>
                                <p class="mb-0">Toplam Üye</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-info text-white">
                            <div class="card-body text-center">
                                <h3>@uyeler.Sum(u => (int)u.ToplamRandevu)</h3>
                                <p class="mb-0">Toplam Randevu</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-success text-white">
                            <div class="card-body text-center">
                                <h3>@uyeler.Sum(u => (int)u.TamamlananRandevu)</h3>
                                <p class="mb-0">Tamamlanan Randevu</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-people" style="font-size: 4rem; color: #ccc;"></i>
                    <p class="text-muted mt-3">Henüz sizden randevu alan üye bulunmamaktadır.</p>
                </div>
            }
        </div>
    </div>
</div>

