@using FitnessSalonYonetim.Models
@{
    ViewData["Title"] = "Eğitmen Paneli";
    var antrenor = ViewBag.Antrenor as Antrenor;
    var bugunRandevular = ViewBag.BugunRandevular as List<Randevu>;
    var yaklasanRandevular = ViewBag.YaklasanRandevular as List<Randevu>;
    var bekleyenRandevularList = ViewBag.BekleyenRandevularList as List<Randevu>;
}

<div class="container-fluid">
    <!-- Bildirimler -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col-md-12">
            <h1><i class="bi bi-person-workspace"></i> Hoş Geldiniz, @antrenor.Ad!</h1>
            <p class="text-muted">Eğitmen Paneli - @DateTime.Now.ToString("dd MMMM yyyy, dddd")</p>
        </div>
    </div>

    <!-- İstatistik Kartları -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-uppercase">Toplam Randevu</h6>
                            <h2 class="mb-0">@ViewBag.ToplamRandevu</h2>
                        </div>
                        <i class="bi bi-calendar-check" style="font-size: 3rem; opacity: 0.5;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-uppercase">Tamamlanan</h6>
                            <h2 class="mb-0">@ViewBag.TamamlananRandevu</h2>
                        </div>
                        <i class="bi bi-check-circle" style="font-size: 3rem; opacity: 0.5;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-uppercase">Bekleyen</h6>
                            <h2 class="mb-0">@ViewBag.BekleyenRandevu</h2>
                        </div>
                        <i class="bi bi-clock-history" style="font-size: 3rem; opacity: 0.5;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-uppercase">Toplam Üye</h6>
                            <h2 class="mb-0">@ViewBag.ToplamUye</h2>
                        </div>
                        <i class="bi bi-people" style="font-size: 3rem; opacity: 0.5;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <!-- Bugünkü Randevular -->
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-calendar-day"></i> Bugünkü Randevular</h5>
                </div>
                <div class="card-body">
                    @if (bugunRandevular != null && bugunRandevular.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Saat</th>
                                        <th>Üye</th>
                                        <th>Hizmet</th>
                                        <th>Durum</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var randevu in bugunRandevular)
                                    {
                                        <tr>
                                            <td><strong>@randevu.BaslangicSaati.ToString(@"hh\:mm")</strong></td>
                                            <td>@randevu.Uye.AdSoyad</td>
                                            <td>
                                                <span class="badge bg-info">@randevu.Hizmet.Ad</span>
                                            </td>
                                            <td>
                                                @switch (randevu.Durum)
                                                {
                                                    case RandevuDurumu.Beklemede:
                                                        <span class="badge bg-warning">Beklemede</span>
                                                        break;
                                                    case RandevuDurumu.Onaylandi:
                                                        <span class="badge bg-success">Onaylandı</span>
                                                        break;
                                                    case RandevuDurumu.Tamamlandi:
                                                        <span class="badge bg-info">Tamamlandı</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@randevu.Durum</span>
                                                        break;
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">Bugün için randevunuz bulunmamaktadır.</p>
                    }
                </div>
            </div>

            <!-- Bekleyen Randevular (Onay Bekleyenler) -->
            @if (bekleyenRandevularList != null && bekleyenRandevularList.Any())
            {
                <div class="card shadow mb-4">
                    <div class="card-header bg-warning text-white">
                        <h5 class="mb-0"><i class="bi bi-clock-history"></i> Onay Bekleyen Randevular</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Tarih</th>
                                        <th>Saat</th>
                                        <th>Üye</th>
                                        <th>Hizmet</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var randevu in bekleyenRandevularList)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@randevu.RandevuTarihi.ToString("dd MMM yyyy")</strong>
                                                <br />
                                                <small class="text-muted">@randevu.RandevuTarihi.ToString("dddd")</small>
                                            </td>
                                            <td><strong>@randevu.BaslangicSaati.ToString(@"hh\:mm")</strong></td>
                                            <td>
                                                @randevu.Uye.AdSoyad
                                                <br />
                                                <small class="text-muted">@randevu.Uye.Email</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@randevu.Hizmet.Ad</span>
                                                <br />
                                                <small class="text-muted">@randevu.Hizmet.Sure dk</small>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <form asp-controller="Trainer" asp-action="RandevuOnayla" asp-route-id="@randevu.Id" method="post" class="d-inline">
                                                        <button type="submit" class="btn btn-sm btn-success" 
                                                                onclick="return confirm('Bu randevuyu onaylamak istediğinize emin misiniz?')"
                                                                title="Onayla">
                                                            <i class="bi bi-check-circle"></i> Onayla
                                                        </button>
                                                    </form>
                                                    <form asp-controller="Trainer" asp-action="RandevuReddet" asp-route-id="@randevu.Id" method="post" class="d-inline ms-1">
                                                        <button type="submit" class="btn btn-sm btn-danger" 
                                                                onclick="return confirm('Bu randevuyu reddetmek istediğinize emin misiniz?')"
                                                                title="Reddet">
                                                            <i class="bi bi-x-circle"></i> Reddet
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="text-center mt-3">
                            <a asp-action="Randevular" class="btn btn-warning">
                                <i class="bi bi-calendar3"></i> Tüm Randevuları Görüntüle
                            </a>
                        </div>
                    </div>
                </div>
            }

            <!-- Yaklaşan Randevular -->
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-calendar-event"></i> Yaklaşan Randevular</h5>
                </div>
                <div class="card-body">
                    @if (yaklasanRandevular != null && yaklasanRandevular.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Tarih</th>
                                        <th>Saat</th>
                                        <th>Üye</th>
                                        <th>Hizmet</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var randevu in yaklasanRandevular)
                                    {
                                        <tr>
                                            <td>@randevu.RandevuTarihi.ToString("dd MMM")</td>
                                            <td><strong>@randevu.BaslangicSaati.ToString(@"hh\:mm")</strong></td>
                                            <td>@randevu.Uye.AdSoyad</td>
                                            <td><span class="badge bg-info">@randevu.Hizmet.Ad</span></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="text-center mt-3">
                            <a asp-action="Randevular" class="btn btn-primary">
                                <i class="bi bi-calendar3"></i> Tüm Randevuları Görüntüle
                            </a>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">Yaklaşan randevunuz bulunmamaktadır.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Hızlı Erişim -->
            <div class="card shadow mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-grid"></i> Hızlı Erişim</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Randevular" class="btn btn-outline-primary">
                            <i class="bi bi-calendar3"></i> Tüm Randevularım
                        </a>
                        <a asp-action="Uyeler" class="btn btn-outline-success">
                            <i class="bi bi-people"></i> Üyelerim
                        </a>
                        <a asp-action="Musaitlikler" class="btn btn-outline-warning">
                            <i class="bi bi-calendar-week"></i> Müsaitliklerim
                        </a>
                        <a asp-action="Profil" class="btn btn-outline-info">
                            <i class="bi bi-person"></i> Profilim
                        </a>
                    </div>
                </div>
            </div>

            <!-- Profil Özeti -->
            <div class="card shadow">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="bi bi-person-circle"></i> Profil Özeti</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(antrenor.ProfilResmi))
                    {
                        <img src="@antrenor.ProfilResmi" alt="@antrenor.AdSoyad" class="rounded-circle mb-3 d-block mx-auto" style="width: 100px; height: 100px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center text-white mb-3 mx-auto" style="width: 100px; height: 100px; font-size: 3rem;">
                            <i class="bi bi-person"></i>
                        </div>
                    }
                    <h5 class="text-center">@antrenor.AdSoyad</h5>
                    <p class="text-center text-muted mb-2">@antrenor.Email</p>
                    <p class="text-center"><span class="badge bg-info">@antrenor.Salon?.Ad</span></p>
                    <hr />
                    <p class="small"><strong>Uzmanlık:</strong> @antrenor.UzmanlikAlanlari</p>
                    @if (antrenor.AntrenorHizmetler != null && antrenor.AntrenorHizmetler.Any())
                    {
                        <p class="small mb-0"><strong>Hizmetler:</strong> @antrenor.AntrenorHizmetler.Count</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

