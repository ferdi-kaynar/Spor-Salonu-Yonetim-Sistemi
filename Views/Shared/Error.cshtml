@model ErrorViewModel
@{
    ViewData["Title"] = "Hata";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h1 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Bir Hata Oluştu</h1>
                </div>
                <div class="card-body text-center">
                    <i class="bi bi-emoji-frown" style="font-size: 5rem; color: #dc3545;"></i>
                    <h2 class="mt-3">Üzgünüz, bir sorun oluştu!</h2>
                    <p class="lead">İsteğiniz işlenirken beklenmeyen bir hata meydana geldi.</p>
                    
                    @if (Model.ShowRequestId)
                    {
                        <div class="alert alert-secondary mt-3">
                            <strong>İstek ID:</strong> <code>@Model.RequestId</code>
                        </div>
                    }
                    
                    <div class="mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                            <i class="bi bi-house-fill"></i> Ana Sayfaya Dön
                        </a>
                    </div>
                    
                    <p class="mt-3 text-muted">
                        Sorun devam ederse lütfen bizimle iletişime geçin.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
