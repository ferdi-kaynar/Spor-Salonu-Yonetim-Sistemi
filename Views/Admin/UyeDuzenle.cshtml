@model FitnessSalonYonetim.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Üye Düzenle";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Üye Bilgilerini Düzenle</h4>
                </div>
                <div class="card-body">
                    <form asp-action="UyeDuzenle" asp-route-id="@ViewBag.UserId" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Ad" class="form-label"></label>
                                <input asp-for="Ad" class="form-control" />
                                <span asp-validation-for="Ad" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Soyad" class="form-label"></label>
                                <input asp-for="Soyad" class="form-control" />
                                <span asp-validation-for="Soyad" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control" readonly />
                                <small class="text-muted">Email değiştirilemez</small>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Telefon" class="form-label"></label>
                                <input asp-for="Telefon" class="form-control" />
                                <span asp-validation-for="Telefon" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DogumTarihi" class="form-label"></label>
                                <input asp-for="DogumTarihi" type="date" class="form-control" />
                                <span asp-validation-for="DogumTarihi" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Cinsiyet" class="form-label"></label>
                                <select asp-for="Cinsiyet" class="form-select">
                                    <option value="">Seçiniz</option>
                                    <option value="Erkek">Erkek</option>
                                    <option value="Kadın">Kadın</option>
                                    <option value="Diğer">Diğer</option>
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Boy" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="Boy" type="number" class="form-control" placeholder="Örn: 175" />
                                    <span class="input-group-text">cm</span>
                                </div>
                                <span asp-validation-for="Boy" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Kilo" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="Kilo" type="number" step="0.1" class="form-control" placeholder="Örn: 75.5" />
                                    <span class="input-group-text">kg</span>
                                </div>
                                <span asp-validation-for="Kilo" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Adres" class="form-label"></label>
                            <textarea asp-for="Adres" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Adres" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="bi bi-check-circle"></i> Güncelle
                            </button>
                            <a asp-action="Uyeler" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

