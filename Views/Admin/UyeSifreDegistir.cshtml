@model FitnessSalonYonetim.ViewModels.AdminChangePasswordViewModel
@{
    ViewData["Title"] = "Üye Şifre Değiştir";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-shield-lock"></i> Üye Şifresi Değiştir</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i> 
                        <strong>@ViewBag.UserName</strong> kullanıcısının şifresini değiştiriyorsunuz.
                    </div>

                    <form asp-action="UyeSifreDegistir" asp-route-id="@ViewBag.UserId" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label"></label>
                            <input asp-for="NewPassword" class="form-control" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                            <div class="form-text">En az 6 karakter olmalıdır.</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> Admin olarak kullanıcının mevcut şifresini bilmenize gerek yoktur.
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-check-circle"></i> Şifreyi Değiştir
                            </button>
                            <a asp-action="Uyeler" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

