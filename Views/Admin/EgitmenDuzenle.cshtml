@model FitnessSalonYonetim.Models.Antrenor
@{
    ViewData["Title"] = "Eğitmen Düzenle";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Eğitmen Bilgilerini Düzenle</h4>
                </div>
                <div class="card-body">
                    <form asp-action="EgitmenDuzenle" asp-route-id="@Model.Id" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Aktif" />
                        
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Ad" class="form-label"></label>
                                <input asp-for="Ad" class="form-control" />
                                <span asp-validation-for="Ad" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Soyad" class="form-label"></label>
                                <input asp-for="Soyad" class="form-control" />
                                <span asp-validation-for="Soyad" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Telefon" class="form-label"></label>
                                <input asp-for="Telefon" class="form-control" />
                                <span asp-validation-for="Telefon" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UzmanlikAlanlari" class="form-label"></label>
                            <input asp-for="UzmanlikAlanlari" class="form-control" />
                            <span asp-validation-for="UzmanlikAlanlari" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Biyografi" class="form-label"></label>
                            <textarea asp-for="Biyografi" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Biyografi" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SalonId" class="form-label">Salon</label>
                            <select asp-for="SalonId" class="form-select">
                                <option value="">Salon Seçiniz</option>
                                @foreach (var salon in ViewBag.Salonlar)
                                {
                                    <option value="@salon.Id">@salon.Ad</option>
                                }
                            </select>
                            <span asp-validation-for="SalonId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProfilResmi" class="form-label"></label>
                            <input asp-for="ProfilResmi" class="form-control" />
                            <span asp-validation-for="ProfilResmi" class="text-danger"></span>
                            @if (!string.IsNullOrEmpty(Model.ProfilResmi))
                            {
                                <div class="mt-2">
                                    <img src="@Model.ProfilResmi" alt="Mevcut Profil Resmi" class="img-thumbnail" style="max-width: 150px;">
                                </div>
                            }
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="bi bi-check-circle"></i> Güncelle
                            </button>
                            <a asp-action="Egitmenler" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

