@model IEnumerable<FitnessSalonYonetim.Models.Antrenor>

@{
    ViewData["Title"] = "Eğitmen Yönetimi";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-people"></i> Eğitmen Yönetimi</h1>
        <a asp-controller="Antrenor" asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Yeni Eğitmen Ekle
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-list"></i> Tüm Eğitmenler (@Model.Count())</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Fotoğraf</th>
                                <th>Ad Soyad</th>
                                <th>Email</th>
                                <th>Telefon</th>
                                <th>Uzmanlık Alanları</th>
                                <th>Salon</th>
                                <th>Hizmetler</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var antrenor in Model)
                            {
                                <tr class="@(!antrenor.Aktif ? "table-secondary" : "")">
                                    <td>
                                        @if (!string.IsNullOrEmpty(antrenor.ProfilResmi))
                                        {
                                            <img src="@antrenor.ProfilResmi" alt="@antrenor.AdSoyad" class="rounded-circle" style="width: 50px; height: 50px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center text-white" style="width: 50px; height: 50px;">
                                                <i class="bi bi-person"></i>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <strong>@antrenor.AdSoyad</strong>
                                    </td>
                                    <td>@antrenor.Email</td>
                                    <td>@antrenor.Telefon</td>
                                    <td>
                                        <small class="text-muted">@antrenor.UzmanlikAlanlari</small>
                                    </td>
                                    <td>
                                        @if (antrenor.Salon != null)
                                        {
                                            <span class="badge bg-info">@antrenor.Salon.Ad</span>
                                        }
                                    </td>
                                    <td>
                                        @if (antrenor.AntrenorHizmetler != null && antrenor.AntrenorHizmetler.Any())
                                        {
                                            @foreach (var hizmet in antrenor.AntrenorHizmetler.Take(3))
                                            {
                                                <span class="badge bg-secondary me-1">@hizmet.Hizmet.Ad</span>
                                            }
                                            @if (antrenor.AntrenorHizmetler.Count > 3)
                                            {
                                                <span class="badge bg-light text-dark">+@(antrenor.AntrenorHizmetler.Count - 3)</span>
                                            }
                                        }
                                    </td>
                                    <td>
                                        @if (antrenor.Aktif)
                                        {
                                            <span class="badge bg-success">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Pasif</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-controller="Antrenor" asp-action="Details" asp-route-id="@antrenor.Id" class="btn btn-sm btn-info" title="Detaylar">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-controller="Antrenor" asp-action="Edit" asp-route-id="@antrenor.Id" class="btn btn-sm btn-warning" title="Düzenle">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form asp-action="ToggleEgitmen" asp-route-id="@antrenor.Id" method="post" class="d-inline" onsubmit="return confirm('Eğitmenin durumunu değiştirmek istediğinizden emin misiniz?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm @(antrenor.Aktif ? "btn-danger" : "btn-success")" title="@(antrenor.Aktif ? "Pasif Et" : "Aktif Et")">
                                                    <i class="bi bi-toggle-@(antrenor.Aktif ? "off" : "on")"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
                    <p class="text-muted mt-3">Henüz eğitmen bulunmamaktadır.</p>
                    <a asp-controller="Antrenor" asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> İlk Eğitmeni Ekle
                    </a>
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Dashboard'a Dön
        </a>
    </div>
</div>

