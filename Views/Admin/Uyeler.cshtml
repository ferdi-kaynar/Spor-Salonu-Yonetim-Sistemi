@model IEnumerable<(FitnessSalonYonetim.Models.ApplicationUser uye, bool isAdmin)>

@{
    ViewData["Title"] = "Üye Yönetimi";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-person-badge"></i> Üye Yönetimi</h1>
        <a asp-action="UyeEkle" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Yeni Üye Ekle
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-list"></i> Tüm Üyeler (@Model.Count())</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Üye ID</th>
                                <th>Ad Soyad</th>
                                <th>Email</th>
                                <th>Telefon</th>
                                <th>Doğum Tarihi</th>
                                <th>Cinsiyet</th>
                                <th>Boy/Kilo</th>
                                <th>Kayıt Tarihi</th>
                                <th>Randevu Sayısı</th>
                                <th>Rol</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var uye = item.uye;
                                var isAdmin = item.isAdmin;
                                <tr>
                                    <td><code>@uye.Id.Substring(0, 8)</code></td>
                                    <td>
                                        <strong>@uye.AdSoyad</strong>
                                    </td>
                                    <td>@uye.Email</td>
                                    <td>@(uye.PhoneNumber ?? "-")</td>
                                    <td>
                                        @if (uye.DogumTarihi.HasValue)
                                        {
                                            @uye.DogumTarihi.Value.ToShortDateString()
                                            <br />
                                            <small class="text-muted">(@((DateTime.Now.Year - uye.DogumTarihi.Value.Year)) yaş)</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(uye.Cinsiyet))
                                        {
                                            <span class="badge bg-info">@uye.Cinsiyet</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (uye.Boy.HasValue && uye.Kilo.HasValue)
                                        {
                                            var boyM = uye.Boy.Value / 100.0;
                                            var bmi = (double)uye.Kilo.Value / (boyM * boyM);
                                            <small>@uye.Boy cm / @uye.Kilo kg</small>
                                            <br />
                                            <small class="text-muted">BMI: @bmi.ToString("F1")</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @uye.KayitTarihi.ToShortDateString()
                                        <br />
                                        <small class="text-muted">@((DateTime.Now - uye.KayitTarihi).Days) gün önce</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-warning">@uye.Randevular.Count</span>
                                    </td>
                                    <td>
                                        @if (isAdmin)
                                        {
                                            <span class="badge bg-danger">Admin</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Üye</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="UyeDetay" asp-route-id="@uye.Id" class="btn btn-sm btn-info" title="Detaylar">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            @if (!isAdmin)
                                            {
                                                <a asp-action="UyeDuzenle" asp-route-id="@uye.Id" class="btn btn-sm btn-warning" title="Düzenle">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="UyeSifreDegistir" asp-route-id="@uye.Id" class="btn btn-sm btn-secondary" title="Şifre Değiştir">
                                                    <i class="bi bi-key"></i>
                                                </a>
                                                <form asp-action="UyeSil" asp-route-id="@uye.Id" method="post" class="d-inline" onsubmit="return confirm('Bu üyeyi silmek istediğinizden emin misiniz? Bu işlem geri alınamaz!');">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-danger" title="Sil">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
                    <p class="text-muted mt-3">Henüz üye bulunmamaktadır.</p>
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Dashboard'a Dön
        </a>
    </div>
</div>

