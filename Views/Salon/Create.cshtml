@model FitnessSalonYonetim.Models.Salon

@{
    ViewData["Title"] = "Yeni Salon Ekle";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-building-add"></i> Yeni Salon Ekle</h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Listeye Dön
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Salon Bilgileri</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Ad" class="form-label"></label>
                        <input asp-for="Ad" class="form-control" placeholder="Örn: Ana Salon" />
                        <span asp-validation-for="Ad" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Adres" class="form-label"></label>
                        <textarea asp-for="Adres" class="form-control" rows="3" placeholder="Salon adresi"></textarea>
                        <span asp-validation-for="Adres" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Telefon" class="form-label"></label>
                        <input asp-for="Telefon" class="form-control" placeholder="(555) 555-5555" />
                        <span asp-validation-for="Telefon" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="AcilisSaati" class="form-label"></label>
                            <input asp-for="AcilisSaati" type="time" class="form-control" />
                            <span asp-validation-for="AcilisSaati" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="KapanisSaati" class="form-label"></label>
                            <input asp-for="KapanisSaati" type="time" class="form-control" />
                            <span asp-validation-for="KapanisSaati" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Aciklama" class="form-label"></label>
                        <textarea asp-for="Aciklama" class="form-control" rows="4" placeholder="Salon hakkında ek bilgiler"></textarea>
                        <span asp-validation-for="Aciklama" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="Aktif" class="form-check-input" />
                        <label asp-for="Aktif" class="form-check-label"></label>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> İptal
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> Bilgi</h5>
            </div>
            <div class="card-body">
                <p><strong>Salon Ekleme</strong></p>
                <p class="small">Yeni bir spor salonu eklemek için formu doldurun.</p>
                <hr>
                <p class="small"><strong>Önemli:</strong></p>
                <ul class="small">
                    <li>Salon adı zorunludur</li>
                    <li>Çalışma saatlerini doğru girin</li>
                    <li>Aktif olarak işaretlenen salonlar listelenecektir</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

