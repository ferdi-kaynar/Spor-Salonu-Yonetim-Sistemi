@model IEnumerable<FitnessSalonYonetim.Models.Salon>

@{
    ViewData["Title"] = "Salon Yönetimi";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-building"></i> Salon Yönetimi</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Yeni Salon Ekle
    </a>
</div>

@if (Model.Any())
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card shadow h-100">
                    <div class="card-header @(item.Aktif ? "bg-success" : "bg-secondary") text-white">
                        <h5 class="mb-0">
                            @item.Ad
                            @if (!item.Aktif)
                            {
                                <span class="badge bg-danger">Pasif</span>
                            }
                        </h5>
                    </div>
                    <div class="card-body">
                        <p><i class="bi bi-geo-alt-fill text-danger"></i> <strong>Adres:</strong> @item.Adres</p>
                        <p><i class="bi bi-telephone-fill text-success"></i> <strong>Telefon:</strong> @item.Telefon</p>
                        <p><i class="bi bi-clock-fill text-primary"></i> <strong>Çalışma Saatleri:</strong> @item.AcilisSaati.ToString(@"hh\:mm") - @item.KapanisSaati.ToString(@"hh\:mm")</p>
                        @if (!string.IsNullOrEmpty(item.Aciklama))
                        {
                            <p><i class="bi bi-info-circle-fill text-info"></i> @item.Aciklama</p>
                        }
                        <hr>
                        <div class="row text-center">
                            <div class="col-6">
                                <h4 class="text-primary">@item.Hizmetler.Count(h => h.Aktif)</h4>
                                <p class="text-muted small">Hizmet</p>
                            </div>
                            <div class="col-6">
                                <h4 class="text-success">@item.Antrenorler.Count(a => a.Aktif)</h4>
                                <p class="text-muted small">Antrenör</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-light">
                        <div class="btn-group w-100" role="group">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">
                                <i class="bi bi-eye"></i> Detay
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Düzenle
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Sil
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Henüz kayıtlı salon bulunmamaktadır.
        <a asp-action="Create" class="alert-link">Hemen salon ekleyin!</a>
    </div>
}

