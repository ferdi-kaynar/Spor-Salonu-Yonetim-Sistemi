@model FitnessSalonYonetim.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h2 class="mb-0"><i class="bi bi-box-arrow-in-right"></i> @ViewData["Title"]</h2>
            </div>
            <div class="card-body">
                <form asp-action="Login" asp-controller="Account" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="ornek@email.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" placeholder="Şifreniz" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3 form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>
                    
                    <button type="submit" class="btn btn-success btn-lg w-100">
                        <i class="bi bi-box-arrow-in-right"></i> Giriş Yap
                    </button>
                </form>
            </div>
            <div class="card-footer text-center">
                <p class="mb-2">
                    Hesabınız yok mu? 
                    <a asp-action="Register" asp-controller="Account" class="text-decoration-none">Kayıt Olun</a>
                </p>
                <hr class="my-2" />
                <div class="d-flex justify-content-center gap-3">
                    <small>
                        <i class="bi bi-person-workspace"></i> 
                        <a asp-controller="Trainer" asp-action="Login" class="text-decoration-none">Eğitmen Girişi</a>
                    </small>
                    <small>|</small>
                    <small>
                        <i class="bi bi-shield-lock"></i> 
                        <a asp-controller="Admin" asp-action="Login" class="text-decoration-none">Admin Girişi</a>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

