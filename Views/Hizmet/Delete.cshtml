@model FitnessSalonYonetim.Models.Hizmet

@{
    ViewData["Title"] = "Hizmet Sil";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-trash"></i> Hizmet Sil</h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Listeye Dön
    </a>
</div>

<div class="alert alert-danger">
    <i class="bi bi-exclamation-triangle"></i> <strong>Dikkat!</strong> Bu hizmeti silmek üzeresiniz. Bu işlem geri alınamaz!
</div>

<div class="card shadow">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0">Silinecek Hizmet Bilgileri</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Hizmet Adı</dt>
            <dd class="col-sm-9"><strong>@Model.Ad</strong></dd>

            <dt class="col-sm-3">Açıklama</dt>
            <dd class="col-sm-9">@(Model.Aciklama ?? "Belirtilmemiş")</dd>

            <dt class="col-sm-3">Salon</dt>
            <dd class="col-sm-9">@Model.Salon?.Ad</dd>

            <dt class="col-sm-3">Hizmet Türü</dt>
            <dd class="col-sm-9"><span class="badge bg-info">@Model.HizmetTuru</span></dd>

            <dt class="col-sm-3">Süre</dt>
            <dd class="col-sm-9">@Model.Sure dakika</dd>

            <dt class="col-sm-3">Ücret</dt>
            <dd class="col-sm-9"><strong>@Model.Ucret.ToString("C")</strong></dd>

            <dt class="col-sm-3">Durum</dt>
            <dd class="col-sm-9">
                @if (Model.Aktif)
                {
                    <span class="badge bg-success">Aktif</span>
                }
                else
                {
                    <span class="badge bg-danger">Pasif</span>
                }
            </dd>
        </dl>

        <form asp-action="Delete" method="post" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> İptal
                </a>
                <button type="submit" class="btn btn-danger" onclick="return confirm('Bu hizmeti silmek istediğinize emin misiniz?')">
                    <i class="bi bi-trash"></i> Sil
                </button>
            </div>
        </form>
    </div>
</div>

