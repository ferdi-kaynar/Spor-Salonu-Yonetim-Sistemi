@model FitnessSalonYonetim.Models.Hizmet

@{
    ViewData["Title"] = "Hizmet Detayları";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-gear"></i> Hizmet Detayları</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Düzenle
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Listeye Dön
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Hizmet Bilgileri</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Hizmet Adı</dt>
                    <dd class="col-sm-9"><strong>@Model.Ad</strong></dd>

                    <dt class="col-sm-3">Açıklama</dt>
                    <dd class="col-sm-9">@(Model.Aciklama ?? "Belirtilmemiş")</dd>

                    <dt class="col-sm-3">Salon</dt>
                    <dd class="col-sm-9">@Model.Salon?.Ad</dd>

                    <dt class="col-sm-3">Hizmet Türü</dt>
                    <dd class="col-sm-9"><span class="badge bg-info">@Model.HizmetTuru</span></dd>

                    <dt class="col-sm-3">Süre</dt>
                    <dd class="col-sm-9">@Model.Sure dakika</dd>

                    <dt class="col-sm-3">Ücret</dt>
                    <dd class="col-sm-9"><strong class="text-success">@Model.Ucret.ToString("C")</strong></dd>

                    <dt class="col-sm-3">Durum</dt>
                    <dd class="col-sm-9">
                        @if (Model.Aktif)
                        {
                            <span class="badge bg-success">Aktif</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Pasif</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="bi bi-people"></i> Bu Hizmeti Veren Antrenörler</h5>
            </div>
            <div class="card-body">
                @if (Model.AntrenorHizmetler != null && Model.AntrenorHizmetler.Any())
                {
                    <p><strong>Toplam:</strong> @Model.AntrenorHizmetler.Count</p>
                    <ul class="list-group list-group-flush">
                        @foreach (var ah in Model.AntrenorHizmetler.Where(ah => ah.Antrenor.Aktif))
                        {
                            <li class="list-group-item">
                                <i class="bi bi-person-check text-success"></i> @ah.Antrenor.AdSoyad
                                <br />
                                <small class="text-muted">@ah.Antrenor.UzmanlikAlanlari</small>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">Henüz antrenör atanmamış.</p>
                }
            </div>
        </div>
    </div>
</div>

