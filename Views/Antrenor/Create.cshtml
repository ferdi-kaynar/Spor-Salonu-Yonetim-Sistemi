@model FitnessSalonYonetim.Models.Antrenor

@{
    ViewData["Title"] = "Yeni Eğitmen Ekle";
    var hizmetler = ViewData["Hizmetler"] as List<FitnessSalonYonetim.Models.Hizmet>;
}

<div class="container-fluid">
    <h1 class="mb-4"><i class="bi bi-person-plus"></i> Yeni Eğitmen Ekle</h1>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Eğitmen Bilgileri</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Ad" class="form-label"></label>
                                <input asp-for="Ad" class="form-control" />
                                <span asp-validation-for="Ad" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="Soyad" class="form-label"></label>
                                <input asp-for="Soyad" class="form-control" />
                                <span asp-validation-for="Soyad" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control" type="email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="Telefon" class="form-label"></label>
                                <input asp-for="Telefon" class="form-control" />
                                <span asp-validation-for="Telefon" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UzmanlikAlanlari" class="form-label"></label>
                            <input asp-for="UzmanlikAlanlari" class="form-control" placeholder="Örn: Kas Geliştirme, Kilo Verme, Fitness" />
                            <span asp-validation-for="UzmanlikAlanlari" class="text-danger"></span>
                            <small class="form-text text-muted">Virgülle ayırarak birden fazla alan girebilirsiniz.</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Biyografi" class="form-label"></label>
                            <textarea asp-for="Biyografi" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Biyografi" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SalonId" class="form-label"></label>
                            <select asp-for="SalonId" class="form-select" asp-items="ViewBag.SalonId">
                                <option value="">-- Salon Seçin --</option>
                            </select>
                            <span asp-validation-for="SalonId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Verdiği Hizmetler</label>
                            <div class="border rounded p-3">
                                @if (hizmetler != null && hizmetler.Any())
                                {
                                    <div class="row">
                                        @foreach (var hizmet in hizmetler)
                                        {
                                            <div class="col-md-6 mb-2">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" name="selectedHizmetler" value="@hizmet.Id" id="hizmet_@hizmet.Id">
                                                    <label class="form-check-label" for="hizmet_@hizmet.Id">
                                                        @hizmet.Ad
                                                        <small class="text-muted">(@hizmet.Sure dk - @hizmet.Ucret ₺)</small>
                                                    </label>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <p class="text-muted mb-0">Henüz hizmet bulunmamaktadır.</p>
                                }
                            </div>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="Aktif" class="form-check-input" checked />
                            <label asp-for="Aktif" class="form-check-label"></label>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Kaydet
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Bilgilendirme</h5>
                </div>
                <div class="card-body">
                    <h6><i class="bi bi-check-circle text-success"></i> Zorunlu Alanlar</h6>
                    <ul>
                        <li>Ad</li>
                        <li>Soyad</li>
                        <li>Email</li>
                        <li>Telefon</li>
                        <li>Uzmanlık Alanları</li>
                        <li>Salon</li>
                    </ul>

                    <hr />

                    <h6><i class="bi bi-lightbulb text-warning"></i> İpuçları</h6>
                    <ul class="small">
                        <li>Email adresi geçerli formatta olmalıdır</li>
                        <li>Telefon numarası 10 haneli olmalıdır</li>
                        <li>En az bir hizmet seçmeniz önerilir</li>
                        <li>Eğitmen oluşturduktan sonra müsaitlik saatleri ekleyebilirsiniz</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

